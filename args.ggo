package "checkFile"
version "1.0"
usage "checkFile [OPTION]..."
purpose "Check if a file's extension matches its original file type"
description "Example: checkFile -d /directory/ -b /example/list_of_files.txt -f example.pdf"
versiontext "Version 1.0"

option "file" f "file" string typestr="filepath" optional multiple
option "batch" b "batch" string typestr="filepath" optional
option "dir" d "directory" string typestr="dirname" optional
